<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="css/response.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
    <title>Document</title>
  </head>
  <body>
    <div class="spinner-wrapper">
        <div class="spinner-border text-primary" role="status">
          <span class="visually-hidden">Loading...</span>
        </div>
      </div>
    <section class="bg-light">
      <div class="container">
        <div class="row">
          <div class="col-lg-12 mb-4 mb-sm-5">
            <div class="card card-style1 border-0">
              <div class="card-body p-1-9 p-sm-2-3 p-md-6 p-lg-7">
                <div class="row align-items-center">
                  <div class="col-lg-6 mb-4 mb-lg-0">
                    <img src=<%= imageUrl %> alt="" />
                  </div>
                  <div class="col-lg-6 px-xl-10">
                    <div
                      class="bg-secondary d-lg-inline-block py-1-9 px-1-9 px-sm-6 mb-1-9 rounded"
                    >
                      <h3 class="h2 text-white mb-0"><%= name %></h3>
                      <span class="text-primary">Developer</span>
                    </div>
                    <ul class="list-unstyled mb-1-9">
                      <li class="display-28">
                        <span
                          class="display-26 text-secondary me-2 font-weight-600"
                          >Company:</span
                        >
                        <%= description %>
                      </li>
                      <li class="display-28">
                        <span
                          class="display-26 text-secondary me-2 font-weight-600"
                          >Location:</span
                        >
                        <%= location %>
                      </li>
                      <li class="display-28">
                        <span
                          class="display-26 text-secondary me-2 font-weight-600"
                          >GitHub:</span
                        >
                        <a href=<%= githubLink %> ><%= githubLink %></a>
                      </li>
                    </ul>
                    <ul class="social-icon-style1 list-unstyled mb-0 ps-0">
                      <li>
                        <a href="#!"><i class="ti-twitter-alt"></i></a>
                      </li>
                      <li>
                        <a href="#!"><i class="ti-facebook"></i></a>
                      </li>
                      <li>
                        <a href="#!"><i class="ti-pinterest"></i></a>
                      </li>
                      <li>
                        <a href="#!"><i class="ti-instagram"></i></a>
                      </li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="container1">
          <% posts.forEach(function(post){ %>
          <div class="card" style="width: 18rem">
            <div class="card-body">
              <h5 class="card-title"><%= post.name %></h5>
              <button class="btn btn-primary"><%= post.language %></button>
            </div>
          </div>
          <% }); %>
        </div>
      </div>
      <form id="myForm" action="/response" method="post">
        <div class="page">
          <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
              <li class="page-item disabled">
                <a class="page-link">Previous</a>
              </li>
              <li class="page-item">
                <button class="page-link">
                  <input
                    type="radio"
                    name="option"
                    value="1"
                    onchange="submitForm()"
                  />1
                </button>
              </li>
              <li class="page-item">
                <button class="page-link">
                  <input
                    type="radio"
                    name="option"
                    value="2"
                    onchange="submitForm()"
                  />2
                </button>
              </li>
              <li class="page-item">
                <button class="page-link">
                  <input
                    type="radio"
                    name="option"
                    value="3"
                    onchange="submitForm()"
                  />3
                </button>
              </li>
              <li class="page-item">
                <button class="page-link">
                  <input
                    type="radio"
                    name="option"
                    value="4"
                    onchange="submitForm()"
                  />4
                </button>
              </li>
              <li class="page-item">
                <button class="page-link">
                  <input
                    type="radio"
                    name="option"
                    value="5"
                    onchange="submitForm()"
                  />5
                </button>
              </li>
              <li class="page-item">
                <button class="page-link">
                  <input
                    type="radio"
                    name="option"
                    value="6"
                    onchange="submitForm()"
                  />6
                </button>
              </li>
              <li class="page-item">
                <button class="page-link">
                  <input
                    type="radio"
                    name="option"
                    value="7"
                    onchange="submitForm()"
                  />7
                </button>
              </li>
              <li class="page-item">
                <button class="page-link">
                  <input
                    type="radio"
                    name="option"
                    value="8"
                    onchange="submitForm()"
                  />8
                </button>
              </li>
              <li class="page-item">
                <button class="page-link">
                  <input
                    type="radio"
                    name="option"
                    value="9"
                    onchange="submitForm()"
                  />9
                </button>
              </li>
              <li class="page-item">
                <button class="page-link">
                  <input
                    type="radio"
                    name="option"
                    value="10"
                    onchange="submitForm()"
                  />10
                </button>
              </li>

              <li class="page-item">
                <a class="page-link" href="#">Next</a>
              </li>
            </ul>
          </nav>
        </div>
      </form>

      <script>
        function submitForm() {
          document.getElementById("myForm").submit();
        }

        const spinnerWrapperE1 = document.querySelector(".spinner-wrapper");
        window.addEventListener("load", () => {
          spinnerWrapperE1.style.opacity = "0";
          setTimeout(() => {
            spinnerWrapperE1.style.display = "none";
          }, 1000);
        });
      </script>
    </section>
  </body>
</html>
